{% extends 'base.html.twig' %}

{% block title %}Hello AdController!{% endblock %}

{% block body %}

    <h1 class="my-3">Voici les annonces de nos hôtes</h1>

    <div class="row">
        {% for ad in ads %}
            <div class="col-md-4">
                <div class="card mb-3">
                    <h3 class="card-header">{{ ad.title }}</h3>
                    <img style="height: 200px; width: 100%; display: block;" src="{{ ad.coverImage }}" alt="Card image">
                    <div class="card-body">
                        <h4 class="card-title">{{ ad.rooms }} chambres, <strong>{{ ad.price }} € / nuit</strong></h4>
                        <p class="card-text">{{ ad.content }}</p>
                    </div>
                    <div class="card-body">
                        <a href="{{ path('ads_show', {'slug': ad.slug}) }}" class="card-link">En savoir plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
