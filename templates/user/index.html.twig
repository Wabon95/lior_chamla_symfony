{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-2" alt="Avatar de {{ user.fullName }}">
                <br>
                <span class="badge badge-primary">{{ user.ads|length }} annonces</span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
                {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a class="btn btn-primary mr-2 mb-2" href="{{ path('account_profile') }}">Modifier son profil</a>
                    <a class="btn btn-primary mb-2" href="{{ path('account_password') }}">Modifier mon mot de passe</a>
                </div>
                {% endif %}
            </div>
        </div>
        {{ user.description|raw }}
        <hr>
        <h2>Les annonces de {{ user.fullName }}</h2>

        {% if user.ads|length > 0 %}
            <div class="row">
                {% for ad in user.ads %}
                    {% include 'ad/_ad.html.twig' %}
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-warning">
                <p>Cet utilisateur n'a pas encore post√© d'annonce.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
